[general]
import =[
    "~/.config/alacritty/catppuccin-mocha.toml"
]

[window]
decorations = "Buttonless"
opacity = 0.85
blur = true
padding = { x = 10, y = 10 }

[font]
normal.family = "{{ .font | default "MesloLGS NF" }}"
bold.family = "{{ .font | default "MesloLGS NF" }}"
italic.family = "{{ .font | default "MesloLGS NF" }}"
bold_italic.family = "{{ .font | default "MesloLGS NF" }}"

size = 15.0

[env]
TERM = "xterm-256color"

[keyboard]
# Shift+Return sends ESC+Enter (same as Option+Enter) to work in tmux
bindings = [{ key = "Return", mods = "Shift", chars = "\u001b\r" }]
